    //Add Role Functionality
    function RoleSubmit() {

        $("#EditRole").hide();
        $("#Submit").show();
        var Values = {};
        Values.RoleName = $('#AddRole').val();
        if (Values.RoleName.length != 0) {
            $('#msg').val('');
            $.ajax({
                url: "/Login/InsertRole",
                method: "POSt",
                data: { model: Values },
                success: function (Result) {
                    if (Result == "True") {
                        alert("Record Sucessfully Saved.");
                        location.reload();
                        $('#AddRole').val('');
                    }
                    else {
                        $('#msg').hide();
                        alert("Record Is Already Exists Please Try Again.");
                        $('#AddRole').val('');
                    }
                }
            });
        }
        else {
            $('#msg').html("<span style='color: red'>Please Enter Role Name.</span>");
        }
    }
    function RoleUpdate(Id, RoleName) {
        $('#loading').show(); 
        $('#msg').hide();
        $("#EditRole").show();
        $("#Submit").hide();
        $('#AddRole').val(RoleName);
        $('#EditRoleId').val(Id);
        $('#loading').fadeOut();
        $("#EditRole").click(function () {
            var EditValues = {};
            EditValues.RoleName = $('#AddRole').val();
            EditValues.Id = $('#EditRoleId').val();
            if (EditValues.Id > 0 && EditValues.RoleName.length > 0) {
                $.ajax({
                    url: "/Login/EditRole",
                    method: "Post",
                    data: { model: EditValues },
                    success: function (Result) {

                        if (Result == "True") {
                            alert("Record Sucessfully Updated.");
                            location.reload();
                            $('#AddRole').val('');
                            $("#EditRole").hide();
                            $("#Submit").show();
                            $('#msg').hide();

                        }
                        else if (Result == "False") {
                            $('#msg').hide();
                            alert("Please Try Again");
                        }
                        //else if (Result == 1) {
                        //    $('#msg').hide();
                        //    alert("Role Is Activated");
                        //}
                        //else if (Result == 2) {
                        //    $('#msg').hide();
                        //    alert("Role Is DisActivated");
                        //}
                        else if (Result == 3) {
                            location.reload();
                        }

                    }
                });
            }
            else {
                $('#msg').show();
                $('#msg').html("<span style='color: red'>Please Enter Role Name.</span>");
            }
        });
    }
    function RoleActive_Deactive(Id) {
        var ActiveValues = {};
        ActiveValues.Id = Id;

        if (ActiveValues.Id > 0) {
            var alertmsg = confirm("Are you Sure You Want change Mode");
            if (alertmsg == true) {
                $.ajax({
                    url: "/Login/EditRole",
                    method: "Post",
                    data: { model: ActiveValues },
                    success: function (Result) {
                        if (Result == 1) {
                            alert("Role Is Activated");
                            location.reload();
                        }
                        else if (Result == 2) {
                            alert("Role Is DisActivated");
                            location.reload();
                        }
                        else if (Result == 3) {
                            location.reload();
                        }
                    }
                });
            }
        }
        else {
            $('#msg').hide();
            alert("Please Try Again");
        }
    }
